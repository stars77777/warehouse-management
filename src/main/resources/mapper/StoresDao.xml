<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.warehouseManag.dao.StoresDao">

    <resultMap type="com.warehouseManag.entity.Stores" id="StoresMap">
        <result property="storeId" column="store_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="StoresMap">
        select
          store_id, name
        from stores
        where store_id = #{storeId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="StoresMap">
        select
          store_id, name
        from stores
        <where>
            <if test="name != null and name != ''">
                and name like '%${name}%'
            </if>
        </where>
        limit #{page}, #{limit}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from stores
        <where>
            <if test="name != null and name != ''">
                and name like '%${name}%';
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="storeId" useGeneratedKeys="true">
        insert into stores(name)
        values (#{name})
    </insert>

    <insert id="insertBatch" keyProperty="storeId" useGeneratedKeys="true">
        insert into stores(name)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.name})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="storeId" useGeneratedKeys="true">
        insert into stores(name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name})
        </foreach>
        on duplicate key update
        name = values(name)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update stores
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where store_id = #{storeId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from stores where store_id = #{storeId}
    </delete>

</mapper>

